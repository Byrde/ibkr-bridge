{
  "name": "ibkr-rest-bridge",
  "version": "0.1.0",
  "description": "RESTful API bridge for Interactive Brokers",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:gateway": "node dist/gateway-server.js",
    "dev": "tsx watch src/index.ts",
    "dev:gateway": "tsx watch src/gateway-server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "typecheck": "tsc --noEmit",
    "cli": "tsx src/cli.ts",
    "openapi:generate": "tsx scripts/generate-openapi.ts",
    "openapi:check": "tsx scripts/generate-openapi.ts && git diff --exit-code openapi.json",
    "docker:build:gateway": "docker build -f Dockerfile.gateway -t ibkr-gateway .",
    "docker:build:bridge": "docker build -f Dockerfile.gateway -t ibkr-gateway . && docker build -f Dockerfile.bridge -t ibkr-bridge --build-arg GATEWAY_IMAGE=ibkr-gateway .",
    "docker:build": "npm run docker:build:bridge"
  },
  "keywords": [
    "ibkr",
    "interactive-brokers",
    "trading",
    "api",
    "rest"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@fastify/http-proxy": "^11.4.1",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "fastify": "^5.1.0",
    "otplib": "^12.0.1",
    "playwright": "^1.57.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "undici": "^7.16.0"
  }
}
